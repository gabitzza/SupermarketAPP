<Window x:Class="SupermarketWPF.View.CategorieValoriView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Valori Categorii" Height="450" Width="800">
    <Grid>
        <DataGrid ItemsSource="{Binding CategorieValoriList}" AutoGenerateColumns="False" Width="750" Margin="25,25,25,25">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Categorie" Binding="{Binding Categoria}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Valoare Totală" Binding="{Binding ValoareTotala}" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
